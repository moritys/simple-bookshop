.PHONY: runserver

runserver:
	python3 app/main.py

# для винды вот эту команду просто можно прописать в терминале bash
# точно также можно указать тут и все остальные переменные, 
# которые мы читаем через os.getenv(), в т.ч и разные секреты и прочее
# но а вообще эти переменные окружения обычно прокидываются 
# через docker-compose либо k8s(но мы простые смертные, так что кубер ни к чему) 

# APP_HOST="127.0.0.1" APP_PORT=5000 python app/main.py